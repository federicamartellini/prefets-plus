{% extends "base.html.twig" %}

{% block titre_onglet %}Résultats de recherche - Prefet +{% endblock %}

{% block titre_page %}
Résultats de recherche pour "{{ query }}"
{% endblock %}

{% block contenu %}
<div class="container mt-4">
    {% if prefets|length > 0 %}
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            {% for prefet in prefets %}
                <div class="col">
                    <div class="card h-100">
                        <div class="card-body">
                            <h5 class="card-title">{{ prefet.prenom }} {{ prefet.nom }}</h5>
                            <p class="card-text">
                                <small class="text-muted">Région : {{ prefet.region }}</small>
                            </p>
                            <a href="/prefets/{{ prefet.prenom }}{{ prefet.nom }}" class="btn btn-primary btn-sm">
                                Voir le profil
                            </a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% else %}
        <div class="alert alert-info">
            Aucun préfet trouvé pour votre recherche.
        </div>
    {% endif %}
</div>
{% endblock %}